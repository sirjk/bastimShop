FROM ubuntu:latest

ENV TZ=Europe/Warsaw

RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN apt-get update && apt -y install maven && apt -y install openjdk-17-jdk && apt -y install mysql-server && service mysql start && mysql -u root --password=root -e "ALTER USER 'root'@'localhost' IDENTIFIED WITH mysql_native_password BY 'root'" && mysql -u root --password=root -e "FLUSH PRIVILEGES" && mysql -u root --password=root -e "CREATE DATABASE bastimdb"

CMD ["sh", "-c", "mvn -f inputVol/bastimShop/backend package && cp ./inputVol/bastimShop/backend/target/shopBastim.jar ./outputVol/"]
