FROM mysql:latest

ENV TZ=Europe/Warsaw

ENV MYSQL_ROOT_PASSWORD root

ENV MYSQL_DATABASE bastimdb

RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN apt update

RUN apt -y install maven

RUN apt -y install default-jdk

CMD ["sh", "-c", "mvn -f inputVol/bastimShop/backend clean package && cp ./inputVol/bastimShop/backend/target/shopBastim.jar ./outputVol/"]
