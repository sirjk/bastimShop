FROM ubuntu:latest

ENV TZ=Europe/Warsaw

RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

RUN apt-get update

RUN apt-get -y install maven

RUN apt-get -y install openjdk-17-jdk

EXPOSE 8082

CMD ["sh", "-c", "mvn -f inputVol/bastimShop/backend clean package && cp ./inputVol/bastimShop/backend/target/shopBastim.jar ./outputVol/"]
